@model ScannerFormViewModel

<div class="modal fade" id="scanner-form-modal" tabindex="-1" role="dialog" aria-labelledby="scanner-form-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="user-form-modal-label">Check Scanner Details</h5>
                <h5 class="modal-title justify-content-end">Scanner ID @Model.ID</h5>
            </div>
        @using (Ajax.BeginRouteForm(Model.CreateUpdateRoute, routeValues: new
        {
            projectId = Model.ProjectID,
            id = Model.ID
        }, ajaxOptions: new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "scanner-form-location",
            OnBegin = "hideScannerFormModal", // TODO: maybe should change this to OnSuccess?
            OnFailure = "handleAjaxError" 
        }, htmlAttributes: new
        {
            id = "scanner-form-element"
        }))
        {
            <div class="modal-body">
                <div class="container-fluid">

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ID)
                    @Html.HiddenFor(m => m.ProjectID)

                    <div class="row">

                        @* First column beginning *@
                        <div class="col-9">
                            <div class="row">
                                @Html.LabelFor(m => m.Model, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.Model, new { htmlAttributes = new { @class = "form-input" } })
                                    @Html.ValidationMessageFor(m => m.Model, "", new { @class = "form-error-msg" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.SerialNumber, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.SerialNumber, new { htmlAttributes = new { @class = "form-input" } })
                                    @Html.ValidationMessageFor(m => m.SerialNumber, "", new { @class = "form-error-msg" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.System, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.System, new { htmlAttributes = new { @class = "form-input" } })
                                    @Html.ValidationMessageFor(m => m.System, "", new { @class = "form-error-msg" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.ComputerInstalledOn, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.ComputerInstalledOn, new { htmlAttributes = new { @class = "form-input" } })
                                    @Html.ValidationMessageFor(m => m.ComputerInstalledOn, "", new { @class = "form-error-msg" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-11">
                                    @Html.LabelFor(m => m.Notes)
                                    @Html.TextAreaFor(m => m.Notes, 5, 10, new { @class = "form-textarea" })
                                </div>
                            </div>
                        </div>
                        @* First column end *@

                        @* Second column beginning *@
                        <div class="col-3">
                            <div class="row">
                                @Html.LabelFor(m => m.DateMailed, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.DateMailed, new { htmlAttributes = new { @class = "form-input" } })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.DateInstalled, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.DateInstalled, new { htmlAttributes = new { @class = "form-input" } })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.DateTrained, new { @class = "col-3" })
                                <div class="col-8">
                                    @Html.EditorFor(m => m.DateTrained, new { htmlAttributes = new { @class = "form-input" } })
                                </div>
                            </div>
                        </div>
                        @* Second column end *@

                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save & Close</button>
            </div>
         }
         </div>
    </div>
</div>