@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row py-4">
    <div class="mx-auto">
        <img src="~/Content/Images/aab-logo.png" />
    </div>
</div>

<div class="py-5">
    <div class="col-8 offset-4">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-2 col-form-label text-uppercase" })
                    <div class="col-5">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "USERNAME" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "form-error-msg" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Password, new { @class = "col-2 col-form-label text-uppercase" })
                    <div class="col-5">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "PASSWORD" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-error-msg" })
                    </div>
                </div>

                <div class="form-group row mt-5">
                    <div class="col-3 offset-2">
                        <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

<div class="row" style="position: relative; top: 170px;">
    <div class="col-5 offset-4 border-top border-primary px-0 pt-2">
        <span class="text-muted" style="line-height: 1.2; font-size: 10px; display: block;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus accumsan et viverra justo commodo. Proin sodales pulvinar sic tempor. Sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</span>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
