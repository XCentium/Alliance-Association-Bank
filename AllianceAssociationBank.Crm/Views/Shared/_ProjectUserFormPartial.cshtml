@model UserFormViewModel

<div class="modal fade" id="user-form-modal" tabindex="-1" role="dialog" aria-labelledby="user-form-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            @*<div class="modal-header">
                <h5 class="modal-title" id="user-form-modal-label">New User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>*@
        @using (Ajax.BeginForm(Model.CreateUpdateAction, "ProjectUsers", ajaxOptions: new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "nav-users-content",
            OnSuccess = "hideUserFormModal"
        }, htmlAttributes: new { id = "user-form-element" }))
        {
            <div class="modal-body">

                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID)

                <div class="row">
                    @Html.LabelFor(m => m.Name, new { @class = "col-3 " })
                    <div class="col-8">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Title, new { @class = "col-3" })
                    <div class="col-8">
                        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-3" })
                    <div class="col-8">
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        }
        </div>
    </div>
</div>