<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container smallnavbar" style="max-width: 1280px;">
        <div class="navbar navbar-expand-sm smallnavbar justify-content-end">
            <div class="justify-content-end mx-2">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @* Top Alert Meesage *@
    <div class="fixed-top alert alert-dismissible" id="top-alert" role="alert" style="display: none;">
        <button type="button" class="close js-btn-hide-alert" data-hide-target="#top-alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="text-center js-alert-text">
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/app")

</body>
</html>
