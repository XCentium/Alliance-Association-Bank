@model ProjectFormViewModel

<div class="row my-2">
    <div class="col-md-10">

        <div class="form-group row">
            @Html.LabelFor(m => m.ProjectName, new { @class = "col-md-1 col-form-label-sm" })
            <div class="col-md-11">
                @Html.EditorFor(m => m.ProjectName, new { htmlAttributes = new { @class = "form-control form-control-sm full-width" } })
                @Html.ValidationMessageFor(m => m.ProjectName, "", new { @class = "text-danger small" })
            </div>

        </div>
    </div>
    <div class="col-md-2">

        <button type="submit" class="btn btn-primary btn-sm">Save</button>
        <button type="reset" class="btn btn-default btn-sm">Cancel</button>

    </div>
</div>

