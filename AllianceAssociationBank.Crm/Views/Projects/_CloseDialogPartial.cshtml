<div class="modal fade" id="close-dialog-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row my-4">
                        <div class="col-2">
                            <img src="~/Content/Images/warning-icon.png" />
                        </div>
                        <div class="col-10">
                            <p class="font-weight-bold">
                                Are you sure you want to close this form? All unsaved changes will be lost.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-light" data-dismiss="modal">Return to Form</button>
                @Html.ActionLink("Close Form", HomeControllerAction.Index, ControllerName.Home, routeValues: null, htmlAttributes: new
                {
                    @class = "btn btn-primary"
                })
            </div>
         </div>
    </div>
</div>