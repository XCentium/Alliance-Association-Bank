@using AllianceAssociationBank.Crm.ViewModels
@model ProjectFormViewModel
@{
    ViewBag.Title = "Projects";
}

<h2>@ViewBag.Title</h2>

@using (@Html.BeginForm("ChangeSelection", "Projects", new { id = Model.ID }, FormMethod.Post, new { @class = "form-horizontal small", role = "form" }))
{
    <!--<div class="row">-->
    <div class="form-group form-group-sm">
        @Html.DropDownListFor(m => m.ID, new SelectList(Model.ProjectList, "Value", "Text"), "", new { @class = "form-control", onchange = "this.form.submit();" })
    </div>
    <!--<div class="col-md-2">
        <button type="button" class="btn btn-primary">Add New</button>
    </div>-->
    <!--</div>-->

    <hr />
}

