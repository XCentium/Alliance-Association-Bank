@model ProjectFormViewModel
@{
    var userRole = Model.CurrentUserRole;
}

<div class="row pt-4 pl-4">

    @* First column beginning *@
    <div class="col-4">

        <div class="row">
            @Html.LabelFor(m => m.Status, new { @class = "col-3" })
            <div class="col-7">
                @Html.RoleBasedDropDownListFor(m => m.Status, userRole, new SelectList(Model.StatusList), null, cssClass:"form-input")
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.StartDate, new { @class = "col-3" })
            <div class="col-7">
                @Html.RoleBasedEditorFor(m => m.StartDate, userRole, cssClass: "form-input")
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.EndDate, new { @class = "col-3" })
            <div class="col-7">
                @Html.RoleBasedEditorFor(m => m.EndDate, userRole, cssClass: "form-input")
            </div>
        </div>

        <div class="row mt-2">
            <label class="col-12 form-label-heading">Contract Review</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.EnrollmentFormReceived, userRole)
            </div>
            @Html.LabelFor(m => m.EnrollmentFormReceived, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.MasterSigCardReceived, userRole)
            </div>
            @Html.LabelFor(m => m.MasterSigCardReceived, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.WelcomeEmailSent, userRole)
            </div>
            @Html.LabelFor(m => m.WelcomeEmailSent, new { @class = "col-11" })
        </div>

        <div class="row">
            <label class="col-12 form-label-heading">Account Opening</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.AssociationListReceived, userRole)
            </div>
            @Html.LabelFor(m => m.AssociationListReceived, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.AssociationAccountsAssigned, userRole)
            </div>
            @Html.LabelFor(m => m.AssociationAccountsAssigned, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.AssociationSignatureCardsSent, userRole)
            </div>
            @Html.LabelFor(m => m.AssociationSignatureCardsSent, new { @class = "col-11" })
        </div>

        <div class="row">
            <label class="col-12 form-label-heading">Online Banking</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.OnlineBankingSetup, userRole)
            </div>
            @Html.LabelFor(m => m.OnlineBankingSetup, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.OnlineBankingTrained, userRole)
            </div>
            @Html.LabelFor(m => m.OnlineBankingTrained, new { @class = "col-11" })
        </div>

        <div class="row">
            <label class="col-12 form-label-heading">ACH</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.ACHLimitAndSpecSubmitted, userRole)
            </div>
            @Html.LabelFor(m => m.ACHLimitAndSpecSubmitted, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.ACHSuccessfulSubmitted, userRole)
            </div>
            @Html.LabelFor(m => m.ACHSuccessfulSubmitted, new { @class = "col-11" })
        </div>

    </div>
    @* First column end *@


    @* Second column beginning *@
    <div class="col-4">

        <div class="row">
            <label class="col-12 form-label-heading">Lockbox</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.LockboxWanted, userRole)
            </div>
            @Html.LabelFor(m => m.LockboxWanted, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.POBoxAssigned, userRole)
            </div>
            @Html.LabelFor(m => m.POBoxAssigned, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.ValidationFileReceived, userRole)
            </div>
            @Html.LabelFor(m => m.ValidationFileReceived, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.LockboxRequestSent, userRole)
            </div>
            @Html.LabelFor(m => m.LockboxRequestSent, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.RemitanceFileTested, userRole)
            </div>
            @Html.LabelFor(m => m.RemitanceFileTested, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.RemitanceFileLife, userRole)
            </div>
            @Html.LabelFor(m => m.RemitanceFileLife, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.CouponsOrdered, userRole)
            </div>
            @Html.LabelFor(m => m.CouponsOrdered, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.CouponProofReviewed, userRole)
            </div>
            @Html.LabelFor(m => m.CouponProofReviewed, new { @class = "col-11" })
        </div>

        <div class="row mt-3">
            <label class="col-12 form-label-heading">Check Scanners</label>
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.ScannerWanted, userRole)
            </div>
            @Html.LabelFor(m => m.ScannerWanted, new { @class = "col-11" })
        </div>
        <div class="row pl-2">
            <div class="col-1">
                @Html.RoleBasedCheckBoxFor(m => m.MMOnCheckScanner, userRole)
            </div>
            @Html.LabelFor(m => m.MMOnCheckScanner, new { @class = "col-11" })
        </div>

        <div class="row pb-3">
            <div class="col-11">
                <div class="col-2 offset-8">
                    @Ajax.RouteLink("Add Scanner", routeName: CheckScannersControllerRoute.CreateScanner, routeValues: new
                    {
                        projectId = Model.ID
                    }, ajaxOptions: new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "scanner-form-location",
                        OnSuccess = "showScannerFormModal",
                        OnFailure = "handleAjaxError"
                    }, htmlAttributes: new
                    {
                        @class = "btn btn-sm btn-add-img"
                    })
                </div>
                <div id="check-scanners-list">
                    @Html.Action(CheckScannersControllerAction.Index, ControllerName.CheckScanners, routeValues: new
                    {
                        projectId = Model.ID
                    })
                </div>
            </div>
        </div>

    </div>
    @* Second column end *@

    @* Third column beginning *@
    <div class="col-4">

        <div class="row mb-3">
            <div class="col-11">
                @Html.LabelFor(m => m.BoardingNextSteps)
                @Html.RoleBasedTextAreaFor(m => m.BoardingNextSteps, userRole, 6, 10, cssClass: "form-textarea")
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-11">
                @Html.LabelFor(m => m.BoardingNotes)
                @Html.RoleBasedTextAreaFor(m => m.BoardingNotes, userRole, 6, 10, cssClass: "form-textarea")
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-11">
                @Html.LabelFor(m => m.Narrative)
                @Html.RoleBasedTextAreaFor(m => m.Narrative, userRole, 6, 10, cssClass: "form-textarea")
            </div>
        </div>

    </div>
    @* Third column end *@

</div>
