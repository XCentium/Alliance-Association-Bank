            // projects autocomplete search
            $("#project-search").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/api/Projects",
                        method: "GET",
                        dataType: "json",
                        data: {
                            search: request.term
                        },
                        success: function (data) {
                            response(data);
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
