                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.City, new { @class = "col-3 form-label-indent" })
            <div class="col-8">
                @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.City, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.State, new { @class = "col-3 form-label-indent" })
            <div class="col-5">
