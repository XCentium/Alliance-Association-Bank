            @Html.LabelFor(m => m.LockboxCMCID, new { @class = "col-3" })
            <div class="col-7">
                @Html.EditorFor(m => m.LockboxCMCID, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.LockboxCMCID, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-0">
            @Html.LabelFor(m => m.HasCorporateAccounts, new { @class = "col-3" })
            <div class="col-1">
                @Html.CheckBoxFor(m => m.HasCorporateAccounts)
            </div>
            <div class="col-6">
                @Html.EditorFor(m => m.CorporateAccounts, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.CorporateAccounts, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-0">
            @Html.LabelFor(m => m.Strongroom, new { @class = "col-3" })
            <div class="col-7">
                @Html.CheckBoxFor(m => m.Strongroom)
            </div>
        </div>

        <div class="row my-0">
            @Html.LabelFor(m => m.EStatements, new { @class = "col-3 form-label" })
            <div class="col-7">
                @Html.CheckBoxFor(m => m.EStatements)
            </div>
        </div>

        <div class="row my-0">
            @Html.LabelFor(m => m.FacsimileSignature, new { @class = "col-3" })
            <div class="col-7">
                @Html.CheckBoxFor(m => m.FacsimileSignature)
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-11">
                @Html.LabelFor(m => m.Notes)
                @Html.TextAreaFor(m => m.Notes, 10, 10, new { @class = "form-textarea" })
            </div>
        </div>

    </div>
    @* Third column end *@
</div>
