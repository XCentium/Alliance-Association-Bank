                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    @Html.EditorFor(m => m.ActualDeposits, new { htmlAttributes = new { @class = "form-input form-input-prepend" } })
                    @Html.ValidationMessageFor(m => m.ActualDeposits, "", new { @class = "form-error-msg" })
                </div>
            </div>
        </div>

