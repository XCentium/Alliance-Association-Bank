                @Html.ValidationMessageFor(m => m.Website, "", new { @class = "form-error-msg" })
            </div>
        </div>

    </div>
    @* First column end *@

    @* Second column start *@
    <div class="col-4">

        <div class="row my-2">
            @Html.LabelFor(m => m.Institution, new { @class = "col-3" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.Institution, new SelectList(Model.InstitutionList), "", new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.Institution, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.RelationshipRate, new { @class = "col-12 mb-0" })
            <div class="col-9 offset-3">
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.RelationshipRate, "All", new { @class = "form-check-input" })
                    <label class="form-check-label">All</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.RelationshipRate, "Lockbox", new { @class = "form-check-input" })
                    <label class="form-check-label">Lockbox</label>
                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(m => m.RelationshipRate, "No", new { @class = "form-check-input" })
                    <label class="form-check-label">No</label>
                </div>
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.OwnerID, new { @class = "col-3" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.OwnerID, new SelectList(Model.EmployeeList, "Value", "Text"), "", new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.OwnerID, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.AFPID, new { @class = "col-3" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.AFPID, new SelectList(Model.EmployeeList, "Value", "Text"), "", new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.AFPID, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.BoardingManagerID, new { @class = "col-3" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.BoardingManagerID, new SelectList(Model.EmployeeList, "Value", "Text"), "", new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.BoardingManagerID, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.SoftwareID, new { @class = "col-3" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.SoftwareID, new SelectList(Model.SoftwareList, "Value", "Text"), "", new { @class = "form-input" })
            </div>
        </div>

        <div class="row mt-2">
            <label class="col-4 form-label-heading">Lock Box</label>
        </div>

        <div class="row mb-1">
            @Html.LabelFor(m => m.LockboxStatus, new { @class = "col-3 form-label-indent" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.LockboxStatus, new SelectList(Model.LockboxStatusList), null, new { @class = "form-input" })
            </div>
        </div>

        <div class="row mb-1">
            @Html.LabelFor(m => m.LockboxSystem, new { @class = "col-3 form-label-indent" })
            <div class="col-8">
                @Html.DropDownListFor(m => m.LockboxSystem, new SelectList(Model.LockboxSystemList), "", new { @class = "form-input" })
            </div>
        </div>

        <div class="row mb-1">
            @Html.LabelFor(m => m.LockboxLiveDate, new { @class = "col-3  form-label-indent" })
            <div class="col-8">
                @Html.EditorFor(m => m.LockboxLiveDate, new { htmlAttributes = new { @class = "form-input" } })
            </div>
        </div>

        <div class="row mt-4 mb-1">
            @Html.LabelFor(m => m.NumberOfAssociations, new { @class = "col-3" })
            <div class="col-4">
                @Html.EditorFor(m => m.NumberOfAssociations, new { htmlAttributes = new { @class = "form-input" } })
            </div>
        </div>

        <div class="row my-1">
            @Html.LabelFor(m => m.NumberOfDoors, new { @class = "col-3" })
            <div class="col-4">
                @Html.EditorFor(m => m.NumberOfDoors, new { htmlAttributes = new { @class = "form-input" } })
            </div>
        </div>

    </div>
    @* Second column end *@

    @* Third column start *@
    <div class="col-4">

        <div class="row my-2">
            @Html.LabelFor(m => m.EstimatedDeposits, new { @class = "col-3" })
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    @Html.EditorFor(m => m.EstimatedDeposits, new { htmlAttributes = new { @class = "form-input form-input-prepend" } })
                    @Html.ValidationMessageFor(m => m.EstimatedDeposits, "", new { @class = "form-error-msg" })
