            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.MailingState, new { @class = "col-3 form-label-indent" })
            <div class="col-5">
                @Html.EditorFor(m => m.MailingState, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.MailingState, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.MailingZipCode, new { @class = "col-3 form-label-indent" })
            <div class="col-5">
                @Html.EditorFor(m => m.MailingZipCode, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.MailingZipCode, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row mt-4 mb-2">
            @Html.LabelFor(m => m.TIN, new { @class = "col-3" })
            <div class="col-8">
                @Html.EditorFor(m => m.TIN, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.TIN, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.TimeZone, new { @class = "col-3" })
            <div class="col-8">
                @Html.EditorFor(m => m.TimeZone, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.TimeZone, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.Phone, new { @class = "col-3" })
            <div class="col-8">
                @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row my-2">
            @Html.LabelFor(m => m.Fax, new { @class = "col-3" })
            <div class="col-8">
                @Html.EditorFor(m => m.Fax, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "form-error-msg" })
