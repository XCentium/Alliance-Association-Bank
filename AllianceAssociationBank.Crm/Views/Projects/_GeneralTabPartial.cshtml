                @Html.ValidationMessageFor(m => m.ZipCode, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row mt-3">
            <label class="col-4 form-label-heading">Mailing Address</label>
            <div>
                <input type="checkbox">
                <label>Same as Physical</label>
            </div>
        </div>

        <div class="row">
            @Html.LabelFor(m => m.MailingAddress, new { @class = "col-3 form-label-indent" })
            <div class="col-8">
                @Html.EditorFor(m => m.MailingAddress, new { htmlAttributes = new { @class = "form-input" } })
                @Html.ValidationMessageFor(m => m.MailingAddress, "", new { @class = "form-error-msg" })
            </div>
        </div>

        <div class="row">
