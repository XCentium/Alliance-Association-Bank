@model HomeViewModel
@{
    ViewBag.Title = "Home";
}

<div class="row py-4">
    <div class="mx-auto">
        <img src="~/Content/Images/aab-logo.png" />
    </div>
</div>

<div class="row py-4">
    <span class="col-1 offset-4 col-form-label px-0">NEW PROJECT</span>
    <div class="col-2">
        @Html.RoleBasedActionLink("Create", ProjectsControllerAction.Create, ControllerName.Projects, null, "btn btn-primary btn-block")
    </div>
</div>

<div class="row py-3">
    <span class="col-1 offset-4 col-form-label px-0">FIND PROJECT</span>
    <div class="col-4">
        <input class="form-control" id="project-search" type="text" placeholder="Name / TIN / PMC ID / Phone" autocomplete="off">
    </div>
</div>

<div class="row pb-3 pt-5">
    <label class="col-1 offset-4 col-form-label px-0">REPORTS</label>
    <div class="col-3 input-group">
        @Html.DropDownListFor(m => m.SelectedReport, Model.ReportsSelectList, "- Select report -", htmlAttributes: new
        {
            id = "selected-report",
            @class = "form-control"
        })
        <div class="input-group-append">
            <button class="btn btn-primary btn-block" id="btn-generate-report" type="button">Generate</button>
        </div>
    </div>
</div>

<div class="row py-3">
    <label class="col-1 offset-4 col-form-label px-0">EXPORTS</label>
    <div class="col-3 input-group">
        @Html.DropDownListFor(m => m.SelectedExport, Model.ExportsSelectList, "- Select export -", htmlAttributes: new
        {
            id = "selected-export",
            @class = "form-control"
        })
        <div class="input-group-append">
            <button class="btn btn-primary btn-block" id="btn-generate-export" type="button">Generate</button>
        </div>
    </div>
</div>

@Html.Partial(SharedView.LegalSectionPartial)