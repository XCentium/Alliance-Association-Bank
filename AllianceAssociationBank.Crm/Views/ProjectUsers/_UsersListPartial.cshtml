@model UsersPagedListViewModel

<table class="table">
    <thead class="table-sm">
        <tr>
            <th class="border-0" scope="col" colspan="4"></th>
            <th class="font-weight-normal border-top-0 border-bottom" scope="col" colspan="2">Permissions</th>
            <th class="font-weight-normal border-top-0 border-bottom" scope="col" colspan="3">Emails</th>
            <th class="border-0" scope="col"></th>
        </tr>
        <tr>
            <th class="font-weight-normal border-0" scope="col">Name</th>
            <th class="font-weight-normal border-0" scope="col">Title</th>
            <th class="font-weight-normal border-0" scope="col">Phone</th>
            <th class="font-weight-normal border-0" scope="col">Email</th>
            <th class="font-weight-normal border-0" scope="col">Active</th>
            <th class="font-weight-normal border-0" scope="col">Adm</th>
            <th class="font-weight-normal border-0" scope="col">Stmt</th>
            <th class="font-weight-normal border-0" scope="col">Lockbox</th>
            <th class="font-weight-normal border-0" scope="col">ACH</th>
            <th class="font-weight-normal border-0" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Items)
        {
            <tr class="border-bottom border-top border-left border-right">
                <td>
                    @Html.DisplayFor(m => user.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Title)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Phone)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Active)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Admin)
                </td>
                <td>
                    @Html.DisplayFor(m => user.StatementEmail)
                </td>
                <td>
                    @Html.DisplayFor(m => user.LockboxEmail)
                </td>
                <td>
                    @Html.DisplayFor(m => user.ACHEmail)
                </td>
                <td class="text-center">
                    @Ajax.RouteLink(" ", routeName: ProjectUsersControllerRoute.EditUser, routeValues: new
                    {
                        projectId = user.ProjectID,
                        id = user.ID
                    }, ajaxOptions: new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "user-form-location",
                        OnSuccess = "showModalTarget",
                        OnFailure = "handleAjaxError"
                    }, htmlAttributes: new
                    {
                        @class = "btn-img btn-edit-img",
                        data_modal_target = "#user-form-modal"
                    })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">

    <div class="col-8">
        @Html.Partial(ProjectUsersView.UsersEmailListSectionPartial)
    </div>

    <div class="col-4">
        <nav aria-label="User Pagination Nav">
            <ul class="pagination pagination-sm justify-content-end">

                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.PreviousPageNumber">Previous</a>
                </li>
                @if (Model.ShowSecondPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.SecondPreviousPageNumber">@Model.SecondPreviousPageNumber</a>
                    </li>
                }
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.PreviousPageNumber">@Model.PreviousPageNumber</a>
                    </li>
                }
                <li class="page-item active">
                    <a class="page-link">@Model.PageNumber</a>
                </li>
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.NextPageNumber">@Model.NextPageNumber</a>
                    </li>
                }
                @if (Model.ShowSecondNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.SecondNextPageNumber">@Model.SecondNextPageNumber</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" data-toggle="change-page" data-project-id="@Model.ProjectID" data-page-number="@Model.NextPageNumber">Next</a>
                </li>

            </ul>
        </nav>
    </div>

</div>