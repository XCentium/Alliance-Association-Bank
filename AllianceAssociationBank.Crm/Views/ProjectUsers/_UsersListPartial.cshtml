@model IEnumerable<UserFormViewModel>

<table class="table">
    <thead>
        <tr>
            <th class="font-weight-normal border-0" scope="col">Name</th>
            <th class="font-weight-normal border-0" scope="col">Title</th>
            <th class="font-weight-normal border-0" scope="col">Phone</th>
            <th class="font-weight-normal border-0" scope="col">Email</th>
            <th class="font-weight-normal border-0" scope="col">Active
            </th>
            <th class="font-weight-normal border-0" scope="col">Adm</th>
            <th class="font-weight-normal border-0" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="border-bottom border-top border-left border-right">
                <td>
                    @Html.DisplayFor(m => user.Name)
                </td>
                <td >
                    @Html.DisplayFor(m => user.Title)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Phone)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Active)
                </td>
                <td>
                    @Html.DisplayFor(m => user.Admin)
                </td>
                <td class="text-center">
                    @Ajax.RouteLink(" ", routeName: "EditProjectUser-Get", routeValues: new
                    {
                        projectId = user.ProjectID,
                        id = user.ID
                    }, ajaxOptions: new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "user-form-location",
                        OnSuccess = "showUserFormModal",
                        OnFailure = "handleAjaxError"
                    }, htmlAttributes: new
                    {
                        @class = "btn-img btn-edit-img"
                    })
                    
                    @*@Ajax.ActionLink(" ", "Delete", "ProjectUsers", routeValues: new { id = user.ID }, ajaxOptions: new AjaxOptions
                    {
                        HttpMethod = "Post",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "project-users-list",
                        Confirm = "Are you sure you want to delete this user?",
                        OnFailure = "handleAjaxError"
                    }, htmlAttributes: new { @class = "btn-img btn-delete-img" })*@
                </td>
            </tr>
        }
    </tbody>
</table>
