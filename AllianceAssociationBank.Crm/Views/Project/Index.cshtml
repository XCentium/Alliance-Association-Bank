@using AllianceAssociationBank.Crm.ViewModels
@model ProjectsViewModel
@{
    ViewBag.Title = "Projects";
}

<h2>@ViewBag.Title</h2>

@using (@Html.BeginForm("ChangeSelection", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedProjectId, new SelectList(Model.Projects, "ID", "ProjectName"), "Please Select", new { @class = "form-control", onchange = "this.form.submit();" })
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary">Add New</button>
        </div>
    </div>
    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.PhysicalAddress, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.PhysicalAddress, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.PhysicalCity, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.PhysicalCity, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.PhysicalState, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.PhysicalState, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.PhysicalZipCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.PhysicalZipCode, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProject.Phone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SelectedProject.Phone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    }
