@model SoftwareViewModel

<div class="modal fade" id="software-form-modal" tabindex="-1" role="dialog" aria-labelledby="software-form-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="software-form-modal-label">New Software</h5>
            </div>
            @using (Ajax.BeginRouteForm(SoftwareControllerRoute.CreateSoftwareHttpPost, routeValues: null, ajaxOptions: new AjaxOptions
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "manage-values-content",
                OnBegin = "ModalDialogHelper.disableFormSubmitButton",
                OnComplete = "ModalDialogHelper.hideModalDialog",
                OnFailure = "ErrorHandler.handleAjaxError"
            }, htmlAttributes: new
            {
                id = "software-form-element",
                data_modal_target = "#software-form-modal"
            }))
            {
            <div class="modal-body">
                <div class="container-fluid">

                    @Html.AntiForgeryToken()
                    <div class="form-group row">
                        @Html.LabelFor(m => m.SoftwareName, new { @class = "col-2 col-form-label required" })
                        <div class="col-10">
                            @Html.EditorFor(m => m.SoftwareName, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.SoftwareName, "", new { @class = "form-val-error-tooltip" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save & Close</button>
            </div>
            }
         </div>
    </div>
</div>