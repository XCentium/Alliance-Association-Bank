<div class="row pt-3">
    
    <div class="col-3">
        <div class="list-group" role="tablist">
            <a class="list-group-item disabled font-weight-bold">Manage</a>
            @Ajax.ActionLink("Employee values", "Index", "Employees", routeValues: null, ajaxOptions: new AjaxOptions
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "value-list-content",
                OnFailure = "ErrorHandler.handleAjaxError"
            }, htmlAttributes: new
            {
                @class = "list-group-item list-group-item-action",
                id = "list-employees-list",
                data_toggle = "list",
                //role = "tab",
            })
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#" role="tab">Software values</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#" role="tab">Reformat AQ2 values</a>
        </div>
    </div>

    <div class="col-4 offset-2">
        <div class="tab-content" id="value-list-content">

        </div>
    </div>

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajaxhelper")
}